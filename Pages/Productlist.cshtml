@page
@model ProductsModel

<!DOCTYPE html>
<html>
<head>
    <title>Product Page</title>
</head>
<body>
    <h1>Product Page</h1>
    <div>
        @foreach (var product in Model.Products)
        {
        <div>
            <h2>@product.Title</h2>
            <img src="@product.img" alt="@product.Title" width="200">
            <p><strong>Maker:</strong> @product.Maker</p>
            <p>@product.Description</p>
            <p><strong>Ratings:</strong> @(string.Join(", ", product.Ratings ?? new List<int>()))</p>
            <a href="@product.Url" target="_blank">Learn More</a>
        </div>
        <hr />
        }
    </div>
</body>
</html>
